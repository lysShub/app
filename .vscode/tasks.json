{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug",
            "dependsOrder": "sequence",
            "dependsOn": [
                "tailwind-build",
                "wails-debug"
            ]
        },
        {
            "label": "tailwind-build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/frontend/tailwind"
            },
            "command": "npx",
            "args": [
                "tailwindcss",
                "-o",
                "../src/tailwind.css",
            ]
        },
        {
            "label": "wails-debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "CGO_ENABLED": "1"
                }
            },
            "osx": {
                "options": {
                    "env": {
                        "CGO_CFLAGS": "-mmacosx-version-min=10.13",
                        "CGO_LDFLAGS": "-framework UniformTypeIdentifiers -mmacosx-version-min=10.13"
                    }
                }
            },
            "windows": {
                "options": {
                    "env": {
                        "CGO_ENABLED": "0"
                    }
                }
            },
            "command": "go",
            "args": [
                "build",
                "-tags",
                "dev -devtools",
                "-gcflags",
                "all=-N -l",
                "-o",
                "build/bin/app.exe"
            ]
        }
    ]
}